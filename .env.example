# DNA-Lang Autonomous Bio-Digital Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Cloud Project Configuration
PROJECT_ID=your-gcp-project-id
REGION=us-central1

# Database Configuration  
DATABASE_URL=postgresql://username:password@localhost/genomic_twin_db

# Pub/Sub Configuration
PUBSUB_TOPIC=dnalang-genomic-events

# Epic EHR Integration (Optional)
EPIC_API_URL=https://fhir.epic.com/interconnect-fhir-oauth
EPIC_CLIENT_ID=your-epic-client-id
EPIC_CLIENT_SECRET=your-epic-client-secret

# Evolution Engine Configuration
EVOLUTION_TARGET_FITNESS=0.95
EVOLUTION_TARGET_CONSCIOUSNESS=0.95
MAX_GENERATIONS=100

# AI Agent Configuration
AGENT_UPDATE_INTERVAL=5000
ENABLE_AUTONOMOUS_PROVISIONING=true

# Security Configuration
ENCRYPTION_KEY=your-encryption-key-here
API_SECRET=your-api-secret-here